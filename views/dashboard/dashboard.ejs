<%- include("../partials/head", {title:"Dashboard"}) %>
<link rel="stylesheet" href="styles/dashboard/dashboard.css">
<script src="/scripts/input-styles-script.js" defer></script>
</head>
  <body>
    <header>
      <%- include("../partials/logo") %>
</header>
<div class="main-container">
<div class="form-container">
  <form action="/logout" method="post">
    <a class="logout-link" onclick="this.parentNode.submit();">Log Out</a>
  </form>
  <form action="/dashboard" method="post">
    <h1>Add an item</h1>
    <div class="input-container">
      <input type="text" id="item_name" name="item_name" required>
      <label for="item_name">Item Name</label>
      <div class="border-1"></div>
    </div>
    <div class="input-container">
      <input type="text" id="family_member_name" name="family_member_name" required>
      <label for="family_member_name">Family Member Name</label>
      <div class="border-2"></div>
    </div>
    <div class="clear"></div>
    <button type="submit">Submit</button>
  </form>
  
</div>
<div class="shopping-list">
  <h1>Shopping Cart Items</h1>
    <ol>
      <% for( const currentShoppingCartItem of currentShoppingCartItems ) { %>
        <li><%= currentShoppingCartItem.item_name %> by: <%= currentShoppingCartItem.family_member_name %>
        <form class="delete-item-form" action="/delete-item/<%= currentShoppingCartItem.id %>" method="post">
          <button>
            <i class="fas fa-trash"></i>
          </button>
        </form>
        </li>
      <% } %>
    </ol>
  </div>
</div>
  </body>
</html>
